<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 600" width="100%" height="100%" preserveAspectRatio="none">
  <defs>
    <!-- Light sky gradient for white background -->
    <linearGradient id="skyGradient" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#FFFFFF"/> <!-- White top -->
      <stop offset="60%" stop-color="#E3F2FD"/> <!-- Very light blue -->
      <stop offset="85%" stop-color="#BBDEFB"/> <!-- Soft blue-gray -->
      <stop offset="100%" stop-color="#90CAF9"/> <!-- Medium sky blue -->
    </linearGradient>

    <!-- Soft blur for glow -->
    <filter id="softBlur" x="-100%" y="-100%" width="300%" height="300%">
      <feGaussianBlur stdDeviation="120"/>
    </filter>
  </defs>

  <!-- Background (white-friendly gradient) -->
  <rect width="100%" height="100%" fill="url(#skyGradient)"/>

  <!-- Subtle bluish horizon glow -->
  <ellipse cx="720" cy="600" rx="900" ry="200" fill="#42A5F5" opacity="0.18" filter="url(#softBlur)">
    <!-- Gentle animation -->
    <animate attributeName="opacity" values="0.12;0.22;0.12" dur="10s" repeatCount="indefinite"/>
    <animate attributeName="rx" values="850;950;850" dur="14s" repeatCount="indefinite"/>
  </ellipse>
</svg>
